{
  "manifest_version": 2,

  "name": "wcmc.io URL shortener",
  "description": "This extension provides quick URL shortening using the wcmc.io service",
  "version": "1.0",

  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },

  "browser_action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "clipboardWrite",
    "tabs",
    "http://wcmc.io/"
  ]
}
